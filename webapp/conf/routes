# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Registration
GET		/register									controllers.Registration.startRegistration
POST	/register								controllers.Registration.handleStartRegistration
#GET		/signup/:token							controllers.Registration.signUp(token: String)
#GET		/reset-password							controllers.Registration.forgotPassword
#POST	/reset-password							controllers.Registration.handleForgotPassword
#GET		/reset-password/:token					controllers.Registration.resetPassword(token: String)
#POST	/reset-password/:token					controllers.Registration.handleResetPassword(token: String)
#GET		/change-password						controllers.Registration.changePassword
#POST	/change-password						controllers.Registration.handleChangePassword

# Auth
GET		/signin									controllers.Auth.signIn
POST	/authenticate							controllers.Auth.authenticate
GET		/signout								controllers.Auth.signOut
#GET		/denied									controllers.Auth.accessDenied

# Home page
GET		/										controllers.Application.index
#GET		/lang/$lang<(en|es)>					controllers.Application.selectLang(lang: String)
#GET		/serviceA								controllers.Application.serviceA
#GET		/serviceA_or_ServiceB					controllers.Application.serviceAorServiceB
#GET		/serviceA_and_ServiceB					controllers.Application.serviceAandServiceB
#GET		/settings								controllers.Application.settings
#GET		/myaccount								controllers.Application.myAccount

#Search 
GET			/search								  controllers.Search.find  

# Map static resources from the /public folder to the /assets URL path
GET		/public/*file							controllers.PublicAssets.public(path="/public", file: Asset)
GET		/css/*file								controllers.PublicAssets.css(path="/public/stylesheets", file: Asset)
GET		/fonts/*file							controllers.PublicAssets.fonts(path="/public/fonts", file: Asset)
GET		/js/*file								controllers.PublicAssets.js(path="/public/javascripts", file: Asset)
GET		/img/*file								controllers.PublicAssets.img(path="/public/images", file: Asset)
GET		/lib/*file								controllers.PublicAssets.lib(path="/public/lib", file: Asset)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               		  controllers.Assets.at(path="/public", file)

